<div class="bg-[#212529] flex-1 pt-8">
  <div class="container mx-auto">
    <div class="grid gap-6 grid-cols-[repeat(auto-fill,minmax(200px,1fr))]">
      <% @playlists.each do |playlist| %>
        <div class="bg-white rounded-lg shadow-md p-4 flex flex-col flex-1">
          <a href="<%= playlist_detail_path(playlist.id) %>">
            <img
              src="<%= playlist.image_url %>"
              alt="<%= playlist.name %>"
              class="object-cover aspect-square rounded-lg mb-4"
            />
            <h2 class="text-xl font-semibold mb-2"><%= playlist.name %></h2>
            <p class="text-gray-600 mb-auto line-clamp-2"><%= playlist.description.html_safe %></p>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>